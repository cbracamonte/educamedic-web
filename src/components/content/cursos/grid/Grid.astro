<div
  class="grid md:grid-cols-3 gap-x-6 gap-y-16 pt-10"
>
  <template x-for="course in courses" :key="course.name">
    <div
      class="p-4"
      x-show=`activeCategory === 'all' || activeCategory === course.category`
    >
      <Card class="'p-4'">
        <div
          class="relative w-full h-40 rounded-lg bg-muted-200 dark:bg-muted-800"
        >
          <img
            class="absolute bottom-0 inset-x-0 mx-auto w-full max-w-[170px] ptablet:max-w-[150px]"
            :src="course.imageUrl"
            :alt="course.name"
          />
        </div>
        <div class="font-sans mt-3">
          <h4
            class="font-semibold text-muted-800 dark:text-muted-100"
            x-text="course.name"
          >
          </h4>
          <p class="text-sm text-muted-400" x-text="course.specialty"></p>
        </div>
        <div class="mt-2">
          <p
            class="text-sm ptablet:text-xs text-muted-500 dark:text-muted-400"
            x-text="course.description"
          >
          </p>
